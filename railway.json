{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "composer install --no-dev && php artisan storage:link && php artisan optimize"
  },
  "deploy": {
    "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  }
}